<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <!--
        Added the entity VcutPlanChangeMaster.
    -->
    <changeSet id="20190930064219-1" author="jhipster">
        <createTable tableName="vcut_plan_change_master">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(200)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_vcut_plan_change_master_description" />
            </column>

            <column name="created_by" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_by" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_date" type="datetime">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <createSequence startValue="1" sequenceName="vcut_plan_change_master_seq" incrementBy="1" cycle="false"/>
        <dropDefaultValue tableName="vcut_plan_change_master" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="vcut_plan_change_master" columnName="last_updated_date" columnDataType="datetime"/>
    </changeSet>
</databaseChangeLog>
